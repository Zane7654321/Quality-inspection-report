.container {
  padding: 20px;
}

.section {
  margin-bottom: 30px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
  display: block;
}

.radio-item {
  display: block;
  margin-bottom: 10px;
}

.textarea {
  width: 100%;
  height: 100px;
  border: 1px solid #ccc;
  padding: 10px;
  box-sizing: border-box;
}

.upload-button {
  margin-bottom: 10px;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.uploaded-image {
  width: 100px;
  height: 100px;
  margin-right: 10px;
  margin-bottom: 10px;
}

.submit-button {
  background-color: #07c160;
  color: white;
  margin-top: 20px;
}